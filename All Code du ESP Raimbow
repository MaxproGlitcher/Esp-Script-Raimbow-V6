task.spawn(function()
    local beep = Instance.new("Sound");
    beep.Volume = 1; -- De 0 à 1, Vous Pouvez En Faire Plus Mais Ce Sera Bruyant...
    beep.SoundId = "rbxassetid://6042053626";
    beep.Parent = game:GetService("CoreGui");
    beep:Play();
    beep.Ended:Wait();
    beep:Destroy();
  end)

